<section class="py-3 vh-100" id="features">
  <div class="container px-5 my-5"><br><br><br>
    <div class="row gx-5"><h4 class=" bg-transparent border-success h4 text-primary">
 <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="#DCAE1D" class="bi bi-chat" viewBox="0 0 16 16">
  <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"/>
</svg> Add Comment </br></br>
        </h4>
      <input type="hidden" id="post_id" value={{id}}>
      <div class="card" style="width: 50rem;">
        
        <div class="card-body">
          <h4 class=" bg-transparent border-success h4" style="color:#DCAE1D">
             
            {{post.title}}</h4>
          <p class="card-text" style="font-weight:bold"> <br>{{post.post_details}}</p>
          <p class="card-text h6">By {{post.user.first_name}} On {{format_date post.created_at}}</p>
          {{!-- <div class="card-footer"></div> --}}
        </div>
        {{#if post.comments.length}}
        <br>
        <h5 class=" bg-transparent border-success h5" style="color:#DCAE1D">Comments</h5>
        <div>
        {{#each post.comments}}
        <div>
          <li>
            {{comment_text}} by {{user.first_name}}
          </li>
          <hr>
        </div>
        {{/each}}
        {{/if}}
        </div>
        <input type="hidden" id="user_id" value={{user_id}}>
        <form class="comment-form">
          <div class="lh-1"><br><br>
        <h5 class=" bg-transparent border-success h5" style="color:#DCAE1D">Add Comment</h5>
      </div>
        <div>
          <textarea name="comment-body" style=" width: 40rem" id='comment-text'></textarea>
        </div>
        <div class="card-body">
          <button type="submit" class="btn btn-primary " id='addCommentBtn'>Add comment</button> <br>
          {{!-- <button type="button" class="btn btn-primary " id='likeBtn'> <a href='/'>Back to Homepage</a></button>
          --}}
        </div>
      </form>
      </div>
</section>
</div>
</div>
</div>
</section>
<script src="/javascript/single-post.js"></script>